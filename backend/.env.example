# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://clinik_user:clinik_password@clinik-db:5432/clinik_db

# ============================================
# PROJECT
# ============================================
PROJECT_NAME=Clinik
VERSION=1.0.0

# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=development
DEBUG=true

# ============================================
# SECURITY
# ============================================
# Genera una clave segura con: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24

# ============================================
# CORS
# ============================================
# Separar multiples origenes con coma
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://frontend:3000

# URL del frontend para links en emails (password reset, invitations, etc.)
FRONTEND_URL=http://localhost:3002

# ============================================
# EMAIL/SMTP CONFIGURATION
# ============================================
# Para Gmail:
# 1. Activa "Verificacion en dos pasos" en tu cuenta de Google
# 2. Ve a https://myaccount.google.com/apppasswords
# 3. Genera una "Contrasena de aplicacion" para "Correo"
# 4. Usa esa contrasena en MAIL_PASSWORD

MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-app-password-de-16-caracteres
MAIL_FROM=tu-email@gmail.com
MAIL_FROM_NAME=Clinik
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_STARTTLS=true
MAIL_SSL_TLS=false
USE_CREDENTIALS=true
VALIDATE_CERTS=true

